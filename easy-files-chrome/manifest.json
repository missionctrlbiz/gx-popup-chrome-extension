{
  "manifest_version": 3,
  "name": "Easy Files for Chrome",
  "version": "1.0",
  "description": "Previews recent downloads and clipboard content.",
  "permissions": [
    "downloads",
    "clipboardRead"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
